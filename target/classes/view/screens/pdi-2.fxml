<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane fx:id="pdi" prefHeight="880.0" prefWidth="1220.0" stylesheets="@../styles/style.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.com.amparoedu.controller.PDIController">

    <!-- TOPO -->
    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="60.0" style="-fx-background-color: #ffffff;">
            <padding>
                <Insets left="20.0" right="20.0" />
            </padding>
            <children>
                <Region prefHeight="60.0" prefWidth="15.0" />

                <Button id="btnSair" fx:id="btnSair" onAction="#btnSairClick" prefWidth="100.0" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" text="Sair" />
                <VBox alignment="CENTER_LEFT" prefHeight="60.0" prefWidth="140.0">
               <children>
                        <VBox prefHeight="200.0" prefWidth="100.0">
                            <children>
                                <Label id="nomeUsuario" fx:id="nomeUsuario" style="-fx-font-weight: bold;" text="Nome de Usuário" />
                                <Label id="cargoUsuario" fx:id="cargoUsuario" style="-fx-text-fill: #666;" text="Professora" />
                            </children>
                     <VBox.margin>
                        <Insets left="10.0" top="10.0" />
                     </VBox.margin>
                        </VBox>
               </children>
                </VBox>

                <Region HBox.hgrow="ALWAYS" />

                <HBox alignment="CENTER_RIGHT" spacing="15.0">
                    <children>
                        <Button id="btnTurmas" fx:id="btnTurmas" onAction="#btnTurmasClick" styleClass="botao-topo" text="Turmas" />
                        <Button id="btnAlunos" fx:id="btnAlunos" onAction="#btnAlunosClick" styleClass="botao-topo" text="Alunos" />
                    </children>
                </HBox>
            </children>
        </HBox>
    </top>


    <!-- CONTEÚDO CENTRAL -->
    <center>
        <!-- ScrollPane para garantir que o conteúdo seja rolável em telas menores -->
        <ScrollPane fitToWidth="true" style="-fx-background-color: white;">
            <content>
                <VBox spacing="20" style="-fx-background-color: white;">
                    <padding>
                        <Insets bottom="30" left="30" right="30" top="30" />
                    </padding>
                    <children>
                        <!-- Título do Formulário (Estilização removida) -->
                        <Label text="Plano de Desenvolvimento Individual">
                     <font>
                        <Font name="System Bold" size="24.0" />
                     </font></Label>

                        <!-- POTENCIALIDADES -->
                        <VBox spacing="8" style="-fx-border-color: #ddd; -fx-border-width: 1; -fx-border-radius: 5; -fx-background-color: #ffffff;">
                            <padding>
                                <Insets bottom="20" left="20" right="20" top="20" />
                            </padding>
                            <children>
                                <!-- Estilização removida -->
                                <Label text="Potencialidades">
                           <font>
                              <Font name="System Bold" size="15.0" />
                           </font></Label>
                                <!-- Estilização removida -->
                                <Label text="Capacidade do aluno, que pode vir a ser." />
                                <TextArea fx:id="potencialidadesTextArea" prefHeight="120" promptText="Digite" styleClass="campo-digite-selecione" wrapText="true" VBox.vgrow="ALWAYS" />
                            </children>
                        </VBox>

                        <!-- NECESSIDADES EDUCACIONAIS ESPECIAIS -->
                        <VBox spacing="8" style="-fx-border-color: #ddd; -fx-border-width: 1; -fx-border-radius: 5; -fx-background-color: #ffffff;">
                            <padding>
                                <Insets bottom="20" left="20" right="20" top="20" />
                            </padding>
                            <children>
                                <!-- Estilização removida -->
                                <Label text="Necessidades Educacionais Especiais">
                           <font>
                              <Font name="System Bold" size="15.0" />
                           </font></Label>
                                <TextArea fx:id="necessidadesTextArea" prefHeight="120" promptText="Digite" styleClass="campo-digite-selecione" wrapText="true" VBox.vgrow="ALWAYS" />
                            </children>
                        </VBox>

                        <!-- HABILIDADES -->
                        <VBox spacing="8" style="-fx-border-color: #ddd; -fx-border-width: 1; -fx-border-radius: 5; -fx-background-color: #ffffff;">
                            <padding>
                                <Insets bottom="20" left="20" right="20" top="20" />
                            </padding>
                            <children>
                                <!-- Estilização removida -->
                                <Label text="Habilidades">
                           <font>
                              <Font name="System Bold" size="15.0" />
                           </font></Label>
                                <!-- Estilização removida -->
                                <Label text="Competências, capacidade." />
                                <TextArea fx:id="habilidadesTextArea" prefHeight="120.0" promptText="Digite" styleClass="campo-digite-selecione" wrapText="true" VBox.vgrow="ALWAYS" />
                            </children>
                        </VBox>


                        <!-- BOTÕES -->
                        <HBox alignment="CENTER_RIGHT" spacing="20.0">
                            <children>
                        <HBox alignment="BOTTOM_LEFT" HBox.hgrow="ALWAYS">
                           <children>
                                      <Button fx:id="btnCancelar" onAction="#btnCancelarClick" prefWidth="200.0" styleClass="botao-cancelar-voltar-sair" text="Cancelar" HBox.hgrow="ALWAYS" />
                           </children>
                        </HBox>
                        <HBox alignment="BOTTOM_RIGHT" spacing="20.0">
                           <children>
                                      <Button fx:id="btnVoltar" onAction="#btnVoltarClick" prefWidth="200.0" styleClass="botao-cancelar-voltar-sair" text="Voltar" />
                                      <Button fx:id="btnSeguinte" onAction="#btnSeguinteClick" prefWidth="200.0" styleClass="botao-seguinte" text="Seguinte" />
                           </children>
                        </HBox>
                            </children>
                        </HBox>

                    </children>
                </VBox>
            </content>
        </ScrollPane>
    </center>

</BorderPane>
